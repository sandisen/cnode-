.page{
    background-color:#eee; 
}
.me{
  height: 100%;
}
.userinfo{
  position: relative;
  width: 100%;
  height: auto;
  background: #444;
  color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.userinfo-avatar {
  display: block;
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  margin-left:30rpx;
  border-radius: 50%;
}
.userinfo-item{
    display: flex;
    flex-direction: column;
}
.userinfo-nickname,.userinfo-locaiton {
  color: #fff;
  font-size: 36rpx;
}

.usermotto{
  margin-top: 10rpx;
}


.view-cell{
    border-bottom:1px solid #D9D9D9;
}
.category-item {
    width: 100%;
    margin: 20rpx 0;
    border-top: 1rpx solid #d9d9d9;
    border-bottom: 1rpx solid #d9d9d9;
    background-color: #fff;
}
.category-item.personal-info {
    height: 130rpx;
    display: flex;
    padding: 20rpx 0;
}
.category-item.personal-info .user-avatar {
    margin: 0 30rpx;
    width: 130rpx;
    height: 130rpx;
    position: relative;
}
.category-item.personal-info .user-avatar image {
    vertical-align: top;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left:0;
    border-radius: 2rpx;
}
.category-item.personal-info .user-name {
    margin-right: 30rpx;
    flex: 1;
    padding-top: 10rpx;
}
.detail-item{
    display: flex;
    margin-left: 30rpx;
    border-bottom: 1px solid RGBA(217, 217, 217, .4);
    height:auto;
    padding:20rpx 0;
    align-items: center;
}
.detail-item:last-child{
    border-bottom:none;
}
.detail-item image{
    height: 40rpx;
    width:40rpx;

}
.detail-item text{
    color:#35495e;
    font-size:36rpx;
    flex:1;
    margin-left: 30rpx;
}
.detail-item .detail-item-btn{
    width: 50rpx;
    color: #d9d9d9;
    height: 40rpx;
    margin-right: 20rpx;
    text-align: center;
}
.detail-item .detail-item-btn::after{
    display: inline-block;
    content:'';
    width: 25rpx;
    height: 25rpx;
    color: #888;
    margin-top: 8rpx;
    border:1px #888 solid;
    border-top-color:transparent;
    border-left-color:transparent;
    transform: rotate(-45deg);
}
